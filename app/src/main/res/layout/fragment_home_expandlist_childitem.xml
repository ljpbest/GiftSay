<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="200dp"
    android:padding="10dp">
    <ImageView
        android:id="@+id/fragment_home_expandlist_childite_image"
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:layout_height="200dp" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/shape_homeitem_back"/>
    <ImageView
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ig_marker_fresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/fragment_home_expandlist_childitem_texttitle"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white"
        android:layout_margin="20dp"
        android:textSize="20sp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <CheckBox
        android:id="@+id/fragment_home_expandlist_childite_textcollect"
        android:layout_width="wrap_content"
        android:button="@null"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="20dp"
        android:drawableTop="@drawable/table_home_list_like_select"
        android:background="@drawable/shap_liked_background"
        android:layout_height="wrap_content"
        android:padding="5dp"/>
</RelativeLayout>