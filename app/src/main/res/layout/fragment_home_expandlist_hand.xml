<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <android.support.v4.view.ViewPager
            android:id="@+id/fragment_home_expandlist_hand_viewpage"
            android:layout_width="match_parent"
            android:layout_height="200dp">
        </android.support.v4.view.ViewPager>
        <android.support.design.widget.TabLayout
            android:id="@+id/fragment_home_expandlist_hand_tablayout"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></android.support.design.widget.TabLayout>
    </RelativeLayout>
    <ScrollView
        android:id="@+id/fragment_home_expandlist_hand_scrollview"
        android:layout_width="wrap_content"
        android:layout_height="200dp">
        <LinearLayout
            android:layout_width="600dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <GridView
                android:id="@+id/fragment_home_expandlist_hand_gridview"
                android:layout_width="600dp"
                android:numColumns="6"
                android:layout_height="match_parent"></GridView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>